        </p>
      </div>
      {columns.map((col) => (
        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.2em] text-ink-600">
            {col.title}
          </p>
          <div class="mt-4 flex flex-col gap-2 text-sm text-ink-700">
            {col.links.map((link) => (
              <a href={link.href} class="hover:text-ink-900">
                {link.label}
              </a>
            ))}
          </div>
        </div>
      ))}
