---
const {
  eyebrow,
  title,
  intro,
  class: className = ""
} = Astro.props;
---
<section class={`py-16 md:py-24 ${className}`}>
  <div class="mx-auto w-full max-w-6xl px-6">
    {eyebrow && (
      <p class="text-sm uppercase tracking-[0.2em] text-ink-600">{eyebrow}</p>
    )}
    {title && <h2 class="mt-3 text-3xl md:text-4xl">{title}</h2>}
    {intro && (
      <p class="mt-4 max-w-2xl text-lg text-ink-600">{intro}</p>
    )}
    <div class="mt-10">
      <slot />
    </div>
  </div>
</section>
