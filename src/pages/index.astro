---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import Section from "../components/Section.astro";
import Container from "../components/Container.astro";

const services = [
  {
    title: "Analytics Strategy",
    description:
      "Align data, metrics, and decision-making so leaders can act with confidence."
  },
  {
    title: "Operational Excellence",
    description:
      "Design resilient processes, clarify ownership, and improve throughput."
  },
  {
    title: "Automation & Enablement",
    description:
      "Identify high-value automation and build pragmatic roadmaps."
  }
];

const steps = [
  {
    title: "Diagnose",
    description:
      "We start with stakeholder interviews, data review, and rapid workshops to pinpoint root causes."
  },
  {
    title: "Design",
    description:
      "We translate findings into a focused roadmap with outcomes, owners, and timelines."
  },
  {
    title: "Deliver",
    description:
      "We embed with your team to deliver measurable improvements and enable handoff."
  }
];
---
<BaseLayout
  title="Rivermark Group | Consulting for Analytics, Operations & Automation"
  description="Rivermark Group helps leaders align analytics, operations, and automation programs with measurable outcomes."
>
  <section class="relative overflow-hidden py-20 md:py-28">
    <Container>
      <div class="grid items-center gap-12 md:grid-cols-[1.2fr_0.8fr]">
        <div>
          <p class="text-sm uppercase tracking-[0.3em] text-ink-600">
            Strategy + execution
          </p>
          <h1 class="mt-5 text-4xl md:text-5xl">
            Consulting that turns complexity into clear decisions.
          </h1>
          <p class="mt-5 text-lg text-ink-600">
            Rivermark Group partners with leadership teams to modernize analytics,
            streamline operations, and scale automation with confidence.
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <Button href="/contact">Schedule a consult</Button>
            <Button href="/services" variant="secondary">
              View services
            </Button>
          </div>
        </div>
        <div class="rounded-[2.5rem] border border-white/80 bg-white/80 p-8 shadow-lift backdrop-blur">
          <p class="text-sm uppercase tracking-[0.2em] text-ink-600">
            What you can expect
          </p>
          <ul class="mt-6 space-y-5 text-sm text-ink-700">
            <li>
              Clear prioritization across analytics, operations, and automation.
            </li>
            <li>Roadmaps that balance short-term wins with long-term change.</li>
            <li>Hands-on support through delivery and capability transfer.</li>
          </ul>
        </div>
      </div>
    </Container>
  </section>

  <Section eyebrow="Services" title="Focused engagements, tangible outcomes">
    <div class="grid gap-6 md:grid-cols-3">
      {services.map((service) => (
        <Card>
          <h3 class="text-xl">{service.title}</h3>
          <p class="mt-3 text-sm text-ink-600">{service.description}</p>
          <a
            href="/services"
            class="mt-6 inline-flex text-sm font-semibold text-ink-900"
          >
            Learn more →
          </a>
        </Card>
      ))}
    </div>
  </Section>

  <Section
    eyebrow="How we work"
    title="A practical consulting model built for action"
    intro="We keep engagements tight, aligned to leadership priorities, and oriented to measurable progress."
  >
    <div class="grid gap-6 md:grid-cols-3">
      {steps.map((step) => (
        <Card>
          <h3 class="text-xl">{step.title}</h3>
          <p class="mt-3 text-sm text-ink-600">{step.description}</p>
        </Card>
      ))}
    </div>
  </Section>

<Section class="pt-0">
  <div class="rounded-[2.5rem] border border-white/20 bg-ink-900 px-8 py-12 text-white shadow-lift md:px-12 md:py-16">
    <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
      <div>
        <p class="text-sm uppercase tracking-[0.2em] text-white/80">
          Ready to move?
        </p>
        <h2 class="mt-3 text-3xl font-semibold text-white md:text-4xl">
          Let’s align on the outcomes that matter most.
        </h2>
      </div>

      <Button
        href="/contact" variant="light">
        Schedule a consult
      </Button>
    </div>
  </div>
</Section>

</BaseLayout>
